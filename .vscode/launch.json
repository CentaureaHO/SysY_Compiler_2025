{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "dbg main",
            "program": "${workspaceFolder}/bin/SysYc",
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "internalConsoleOptions": "openOnSessionStart",
            "MIMode": "gdb",  // 使用 GDB 调试器
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "args": ["test.in", "-llvm", "-o", "test.ll"],
            "preLaunchTask": "build"
        },
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "dbg test",
            "program": "${workspaceFolder}/bin/test",
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "internalConsoleOptions": "openOnSessionStart",
            "MIMode": "gdb",  // 使用 GDB 调试器
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "test"
        }
    ]
}