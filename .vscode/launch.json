{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "Debug with GDB",
            "program": "${workspaceFolder}/bin/compiler",
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "internalConsoleOptions": "openOnSessionStart",
            "MIMode": "gdb",  // 使用 GDB 调试器
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build"
        },
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "Debug with LLDB",
            "program": "${workspaceFolder}/bin/compiler",
            "cwd": "${workspaceFolder}",
            "externalConsole": true,
            "MIMode": "lldb",  // 使用 LLDB 调试器
            "preLaunchTask": "build"
        }
    ]
}